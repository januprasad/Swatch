<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <com.jenuine.materialpainter.view.SwatchView
      android:id="@+id/vibrant_swatch"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

    <com.jenuine.materialpainter.view.SwatchView
      android:id="@+id/vibrant_dark_swatch"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

    <com.jenuine.materialpainter.view.SwatchView
      android:id="@+id/vibrant_light_swatch"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <com.jenuine.materialpainter.view.SwatchView
      android:id="@+id/muted_swatch"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

    <com.jenuine.materialpainter.view.SwatchView
      android:id="@+id/muted_dark_swatch"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

    <com.jenuine.materialpainter.view.SwatchView
      android:id="@+id/muted_light_swatch"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

  </LinearLayout>

</LinearLayout>